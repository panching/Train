<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.panching.train">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AreaActivity"
            android:label="@string/title_activity_area"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StationActivity"
            android:label="@string/title_activity_station"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TrainListActivity"
            android:label="@string/title_activity_train_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TimeActivity"
            android:label="@string/title_activity_time"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RouteDirectionActivity"
            android:label="@string/title_activity_route_direction"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
